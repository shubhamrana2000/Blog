<style>
  .login-card-container{
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .login-card-logo{
    margin-bottom: 1rem;
  }
  .login-card-logo img{
    width:100px;
  }
  .login-card-logo,
  .login-card-header{
    text-align: center;
  }
  .login-card {
  width: 450px;
  background: rgba(255, 255, 255, 0.5);
  padding: 4rem;
  padding-top: 2rem;
  border-radius: 10px;
  position: relative;
  box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
  }
.login-card::before{
    content: '';
    position: absolute;
    background: rgba(255, 255, 255, 0.15);
    inset: 0;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
    transform: rotate(-6deg);
    border-radius: 10px;
    z-index: -1;
  }
  .sb_btn{
    box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
  }
  .hd{
    text-shadow: 3px 3px 3px #ababab;
  }
</style>
<div class="login-card-container">
  <div class="login-card mt-4">
    
    <div class="login-card-logo">
      <%= image_tag 'naruto.png' %>
    </div>
    
    <div class="login-card-header my-3">
      <h1 class="hd">Sign In</h1>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-item">
        <%= f.email_field :email,placeholder:"Email" ,class:"cfield mb-4 form-control" %>
      </div>

      <div class="form-item">
        <%= f.password_field :password, placeholder:"Password" ,class:"cfield mb-4 form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-item">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions my-2">
        <%= f.submit "Log in",class:"form-control btn btn-primary sb_btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>