<style>
	*{
		margin:0;
		padding:0;
		box-sizing: border-box;
	}
	body{
		overflow: hidden;
		display:flex;
		justify-content: center;
		align-items: center;
	}
	section{
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;
		background: url(<%= asset_path 'pexels-martin-mariani-3801464.jpg' %>);
		background-position-x:center;
		background-size: cover;
		animation: animateBg 5s linear infinite;
	}

	@keyframes animateBg
	{
		0%,100%{transform: scale(1);}
		50%{transform: scale(1.01);}
	}
	span{
		position: absolute;
		top: 50%;
		left: 50%;
		width: 4px;
		height: 4px;
		background: #fff;
		border-radius: 50%;
		box-shadow:inset 0 0 0 4px rgba(255,255,255,0.1),0 0 0 8px rgba(255,255,255,0.1),0 0 0 10px rgba(255,255,255,0.1);
		animation: animate 3s linear infinite;
	}
	span::before{
		content:'';
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		width: 300px;
		height: 1px;
		border-radius: 50%;
		background: linear-gradient(90deg,#fff,transparent);
	}
	@keyframes animate{
		0%{transform: rotate(315deg) translateX(0);opacity: 1;}
		70%{opacity:1;}
		100%{transform: rotate(315deg) translateX(-1000px);opacity: 0;}
	}
	span:nth-child(1)
	{
		top:0;
		right: 80px;
		left: initial;
		animation-delay: 0.2s;
		animation-duration: 3s;
	}
	span:nth-child(2)
	{
		top:0px;
		right: 80px;
		left: initial;
		animation-delay: 0.2s;
		animation-duration: 3s;
	}
	span:nth-child(3)
	{
		top:80px;
		right: 0px;
		left: initial;
		animation-delay: 0.4s;
		animation-duration: 2s;
	}
	span:nth-child(4)
	{
		top:0;
		right: 180px;
		left: initial;
		animation-delay: 0.6;
		animation-duration: 1.5s;
	}
	span:nth-child(5)
	{
		top:0;
		right: 600px;
		left: initial;
		animation-delay: 1s;
		animation-duration: 3s;
	}
	span:nth-child(6)
	{
		top:0;
		right: 80px;
		left: initial;
		animation-delay: 0.2;
		animation-duration: 3s;
		
	}
	span:nth-child(7)
	{
		top:300px;
		right: 0px;
		left: initial;
		animation-delay: 1.2s;
		animation-duration: 1.73s;	
	}
	span:nth-child(8)
	{
		top:0px;
		right: 700px;
		left: initial;
		animation-delay: 1.4s;
		animation-duration: 1.25s;	
	}
	span:nth-child(9)
	{
		top:0px;
		right: 1000px;
		left: initial;
		animation-delay: 0.75s;
		animation-duration: 2.23s;	
	}
	span:nth-child(10)
	{
		top:0px;
		right: 450px;
		left: initial;
		animation-delay: 2.75s;
		animation-duration: 1.75s;	
	}

	.containers{
		position:relative;
		margin:0;
		padding:0;
		overflow:none;
	}
	.containers .cards{
		position:relative;
		width:60vw;
		height: 60vh;
		margin:30px;
		box-shadow: 20px 20px 50px rgba(0,0,0,0.5);
		border-radius: 15px;
		overflow: hidden;
		display: flex;
		justify-content: center;
		align-items: center;
		border-top: 1px solid rgba(255,255,255,0.5);
		border-left: 1px solid rgba(255,255,255,0.5);
		/*border-bottom: 1px solid rgba(255,255,255,0.5);
		border-right: 1px solid rgba(255,255,255,0.5);*/
		backdrop-filter:blur(5px) ;
	}
	.containers .cards .contents{
		color:white;
		padding:30px;
	}
	.containers .cards .contents h1{
		text-align:center;
		font-size: 8em;
		color: rgba(255,255,255,0.5);
		pointer-events: none;
		font-size:42px;
	}

	.containers .cards .contents a{
		position: relative;
		display: inline-block;
		padding: 8px 20px;
		margin-top: 15px;
		background: #fff;
		color: #000;
		border-radius: 20px;
		text-decoration: none;
		font-weight: 500;
		box-shadow: 0 5px 15px rgba(0,0,0,0.2);
	}
	.contents{
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}
</style>

