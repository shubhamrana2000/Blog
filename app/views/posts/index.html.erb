<style>
  .container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-gap: 22px;
    background: transparent; 
  }         
  .item{
    background-color: rgba(255, 255, 255, 0.8);
    text-align: center;
    padding-bottom: 20px;
    border-radius: 10px;
    box-shadow: rgba(14, 30, 37, 0.12) 0px 2px 4px 0px, rgba(14, 30, 37, 0.32) 0px 2px 16px 0px;
  }

  .item:hover{
    transform: scale(1.03);
    transition: all linear 0.27s;
  }
  img.post-image{
    height:300px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }
  .show_post_button{
    box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
  }
  .hd{
    text-shadow: 3px 3px 3px #ababab;
  }
  @media (max-width: 992px) {
      .container {  grid-template-columns: auto;}
  }   
</style>



<h1 style="text-align: center;" class="my-3 hd">Blogs</h1>
<div class="container mb-4">
  <% @posts.each do |post| %>
    <div class="card item" >
      <div style="display:flex;justifycontent:flex-end;position: absolute;right: 0;">
        <span class="mail badge rounded-pill bg-danger"><strong>Posted by : </strong><%= post.user.email %></span>
      </div>

      <!-- image is removed to save data base memory so just taking links and uplaoding through it  -->
      <!-- <% if post.postimage.url.present? %>
        <%= image_tag post.postimage.url ,class:"post-image"%>
      <% end %> -->

      <%# if post.postimageurl.present? %>
        <%#image_tag 'post.postimageurl',class:"post-image" %>
         <%= image_tag(post.postimageurl, class:"post-image") %>
      <%# end %>

      <div id="<%= dom_id post %> " class="card-body p-1">
        <h2 class="card-title mt-1 mb-2" style="font-size: 32px;"><%= post.title %></h2>
        <p class="card-text" style="font-size: 14px;font-family: 'Poppins';"><%= truncate(post.body,:length=>120) %>   </p>
        <%= link_to "Show this post", post , class:"btn btn-primary show_post_button"%>
      </div>
    </div>
  <% end %>
</div>