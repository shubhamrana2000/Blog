<style>
  .b2p{
    box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
    padding:8px;
  }
  .cfield{
    height:10rem;
  }
</style>

 
<%= form_for @post do |form| %>

  <div class="form-group">
    <%= form.text_field :title ,placeholder:"Title" ,class:"mb-3 form-control mt-4" %>
  </div>

  <div class="form-group">
    <%= form.text_area :body ,placeholder:"Enter something here" ,class:"cfield mb-3 form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :"Upload Image",style:"display:block" %>
    <%= form.file_field :postimage,class:"form-control" %>
  </div>

  <% if @post.postimage.url.present? %>
    <%= image_tag @post.postimage.url ,class:"post-image card-image-top"%>
  <% end %>

  <div class="from-group my-2" >
    <% if @post.postimage.url.present? %>
      <%= form.check_box :remove_postimage %>  Remove Image
    <% end %>
  </div>

  <div>
    <%= form.submit class:"btn btn-secondary form-control b2p" %>
  </div>
<% end %>
 